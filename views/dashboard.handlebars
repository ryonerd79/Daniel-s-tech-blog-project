<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{ user.displayName }}!</h2>
  </div>
</div>
<a class="btn  btn-info" href="/dashboard/new">Add new post</a>


    
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
        <p>{{content}}</p>
      </div>
      
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>